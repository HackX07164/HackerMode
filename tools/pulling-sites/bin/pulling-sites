#!/usr/bin/python3
import os
import sys

sys.path.append(os.environ.get("VIRTUAL_ENV") + "/tools/pulling-sites")

from source import PullSites

if __name__ == "__main__":
    url = sys.argv[1]
    project_name = sys.argv[2]
    page_name = sys.argv[3]
    PullSites(url, project_name, page_name).start()
